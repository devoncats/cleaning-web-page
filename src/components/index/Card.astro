---
interface Props {
    title: string;
    description: string;
}

const {title, description} = Astro.props;
---

<section class="px-8 py-6 min-h-96 flex flex-col justify-between gap-8 rounded bg-blue-600">
    <img class="size-14 bg-red-600 p-2 rounded-full" src="/test.svg" alt="test"/>

    <div class="grid gap-4">
      <h2 class="text-2xl font-semibold">
          {title}
      </h2>
      <p class="max-w-[25vw] text-left font-semibold">
          {description}
      </p>
    </div>

    <button class="bg-white text-blue-600 py-2 px-4 rounded w-1/2">
            Learn More
    </button>
</section>

